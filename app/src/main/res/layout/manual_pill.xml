<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/pillname1"
        android:layout_width="match_parent"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_par="true"
        android:background="@drawable/gray"
        android:fontFamily="monospace"
        android:hint="@string/medicine_name"
        android:inputType=""
        android:textAlignment="viewStart" />

    <ImageView
        android:id="@+id/howManyOneTime"
        android:layout_width="273dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        android:src="@drawable/font" />

    <EditText
        android:id="@+id/dayTimesText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="308dp"
        android:background="@drawable/gray"
        android:fontFamily="monospace"
        android:hint="@string/how_many_per_session"
        android:inputType="number" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="235dp"
        android:src="@drawable/how_many_times_a_day_" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/pillTimes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/howManyOneTime">

        <EditText
            android:id="@+id/pillTimesText"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gray"
            android:hint="@string/times_per_day"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/pillCounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="328dp">

        <EditText
            android:id="@+id/pillCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:layout_weight="1"
            android:background="@drawable/gray"
            android:hint="@string/amount_in_bottle"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dayTimesText"
        android:layout_centerHorizontal="true"
        android:text="@string/e_g_1_if_take_1_tablet_by_the_mouth_every_3_days" />

    <Button
        android:id="@+id/pillButton"
        android:layout_width="wrap_content"
        android:layout_height="91dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="114dp"
        android:background="@drawable/add_newpills" />

    <Button
        android:id="@+id/btnSendSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:background="@drawable/takepic" />


</RelativeLayout>